{
	"compilerOptions": {
		"target": "ES5",
		"module": "ES6",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"lib": ["ESNext", "DOM"],
